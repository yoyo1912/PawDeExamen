@model IEnumerable<RedoPawProj.Models.CompanieModel>

@{
    ViewData["Title"] = "Companies";
}

<h2>Companies</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Established Date</th>
                <th>
                    @Html.ActionLink("Domain", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nume</td>
                    <td>@item.Adresa</td>
                    <td>@item.NumarTelefon</td>
                    <td>@item.DataInfiintarii.ToShortDateString()</td>
                    <td>@item.DomeniuActivitate?.Nume</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No companies available.</p>
}

<a asp-action="Create" class="btn btn-primary">Create New</a>
