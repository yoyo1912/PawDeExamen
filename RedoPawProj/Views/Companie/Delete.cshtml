@model RedoPawProj.Models.CompanieModel

@{
    ViewData["Title"] = "Delete Company";
}

<h2>Delete Company</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Nume</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Adresa
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.NumarTelefon
        </dd>
        <dt class="col-sm-2">
            Established Date
        </dt>
        <dd class="col-sm-10">
            @Model.DataInfiintarii.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Domain
        </dt>
        <dd class="col-sm-10">
            @Model.DomeniuActivitate.Nume
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>