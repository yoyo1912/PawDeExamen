@model RedoPawProj.Models.CompanieModel

@{
    ViewData["Title"] = "Edit Company";
}

<h2>Edit Company</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var value in ViewData.ModelState.Values)
        {
            @foreach (var error in value.Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        }
    </div>
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nume" class="control-label"></label>
        <input asp-for="Nume" class="form-control" />
        <span asp-validation-for="Nume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adresa" class="control-label"></label>
        <input asp-for="Adresa" class="form-control" />
        <span asp-validation-for="Adresa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumarTelefon" class="control-label"></label>
        <input asp-for="NumarTelefon" class="form-control" />
        <span asp-validation-for="NumarTelefon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataInfiintarii" class="control-label"></label>
        <input asp-for="DataInfiintarii" class="form-control" type="date" />
        <span asp-validation-for="DataInfiintarii" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DomeniuActivitateId" class="control-label">Domain</label>
        <select asp-for="DomeniuActivitateId" class="form-control" asp-items="ViewBag.DomeniuActivitateId"></select>
        <span asp-validation-for="DomeniuActivitateId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
